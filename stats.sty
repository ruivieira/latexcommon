\RequirePackage{amsmath}

\newcommand{\argmax}[1]{\underset{#1}{\operatorname{arg}\,\operatorname{max}}\;}
\newcommand{\E}[1]{\mathbb{E}\left({#1}\right)}
\newcommand{\Var}[1]{\text{Var}({#1})}
\newcommand{\Cov}[1]{\text{Cov}({#1})}
\newcommand{\p}[1]{\text{p}\left({#1}\right)}
% Shortcut for a Normal distribution. Usage ex.: \N{0}{\sigma}
\newcommand{\N}[2]{\sim \mathcal{N} \left( #1,#2 \right) }
% Normal-Gamma (with four parameters). Usage ex.: \NG{\mu}{\lambda}{\alpha}{\beta}
\newcommand{\NormalGamma}[4]{\sim \mathcal{NG} \left(#1,#2,#3,#4\right)}